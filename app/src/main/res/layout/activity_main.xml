<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:text="CASIO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/txt_ingreso"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:editable="true"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo" />

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ingreso">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000">

            <Button
                android:id="@+id/btnborrar"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="limpiar"
                android:text="CE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btncos"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="coseno"
                android:text="cos"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btntan"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="tangente"
                android:text="tan"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btndividir"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="dividir"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn7"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn8"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn9"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnmult"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="multiplicar"
                android:text="X"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn4"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn5"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn6"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnmenos"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="restar"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn1"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn2"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn3"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnsuma"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="sumar"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnsen"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="seno"
                android:text="sen"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btn0"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnpunto"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="btnpunto"
                android:text=","
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnigual"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:backgroundTint="#000000"
                android:onClick="igual"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>